{% extends 'base.html.twig' %}

{% block title %}Téléchargement - FastDrop{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow">
            <div class="card-header text-center bg-primary text-white">
                <h4><i class="bi bi-download"></i> Téléchargement sécurisé</h4>
                <p class="mb-0">Accès par token</p>
            </div>
            <div class="card-body p-4">
                {% if error %}
                    <div class="alert alert-danger">
                        <i class="bi bi-exclamation-triangle"></i> {{ error }}
                    </div>
                {% endif %}

                <form method="post">
                    <input type="hidden" name="token" value="{{ token }}">
                    
                    <div class="mb-4 text-center">
                        <i class="bi bi-shield-lock text-primary" style="font-size: 3rem;"></i>
                        <p class="text-muted mt-2">Ce fichier est protégé par mot de passe</p>
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label">
                            <i class="bi bi-lock"></i> Mot de passe
                        </label>
                        <input type="password" 
                               name="password" 
                               id="password" 
                               class="form-control" 
                               required 
                               autofocus
                               placeholder="Entrez le mot de passe du fichier">
                    </div>

                    <div class="d-grid">
                        <button class="btn btn-primary btn-lg" type="submit">
                            <i class="bi bi-download"></i> Télécharger le fichier
                        </button>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center text-muted">
                <small>
                    <i class="bi bi-shield-check"></i> 
                    Connexion sécurisée HTTPS
                </small>
            </div>
        </div>
    </div>
</div>

<div class="row justify-content-center mt-4">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5><i class="bi bi-info-circle"></i> À propos du téléchargement sécurisé</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 text-center">
                        <i class="bi bi-shield-lock text-primary" style="font-size: 2rem;"></i>
                        <h6 class="mt-2">Protection par mot de passe</h6>
                        <p class="small text-muted">Accès contrôlé avec authentification</p>
                    </div>
                    <div class="col-md-4 text-center">
                        <i class="bi bi-clock text-warning" style="font-size: 2rem;"></i>
                        <h6 class="mt-2">Liens temporaires</h6>
                        <p class="small text-muted">Expiration automatique pour la sécurité</p>
                    </div>
                    <div class="col-md-4 text-center">
                        <i class="bi bi-eye-slash text-success" style="font-size: 2rem;"></i>
                        <h6 class="mt-2">Audit complet</h6>
                        <p class="small text-muted">Traçabilité de tous les téléchargements</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
