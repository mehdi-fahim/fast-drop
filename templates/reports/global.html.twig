{% extends 'base.html.twig' %}

{% block title %}Rapports globaux - FastDrop{% endblock %}

{% block page_title %}
    <i class="bi bi-globe me-2"></i>Rapports globaux
{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-globe"></i> Rapports globaux</h1>
    <div class="d-flex gap-2">
        <a href="{{ path('reports_index') }}" class="btn btn-outline-primary">
            <i class="bi bi-person"></i> Mes rapports
        </a>
        <a href="{{ path('dashboard') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Retour au dashboard
        </a>
    </div>
</div>

<!-- Date Range Selector -->
<div class="card mb-4">
    <div class="card-header">
        <h6><i class="bi bi-calendar-range"></i> Période d'analyse</h6>
    </div>
    <div class="card-body">
        <form method="GET" class="row g-3">
            <div class="col-md-4">
                <label for="start_date" class="form-label">Date de début</label>
                <input type="date" class="form-control" id="start_date" name="start_date" 
                       value="{{ start_date|date('Y-m-d') }}" required>
            </div>
            <div class="col-md-4">
                <label for="end_date" class="form-label">Date de fin</label>
                <input type="date" class="form-control" id="end_date" name="end_date" 
                       value="{{ end_date|date('Y-m-d') }}" required>
            </div>
            <div class="col-md-4">
                <label class="form-label">Périodes rapides</label>
                <div class="btn-group w-100" role="group">
                    <button type="button" class="btn btn-outline-secondary btn-sm" onclick="setDateRange('today')">Aujourd'hui</button>
                    <button type="button" class="btn btn-outline-secondary btn-sm" onclick="setDateRange('last_7_days')">7j</button>
                    <button type="button" class="btn btn-outline-secondary btn-sm" onclick="setDateRange('last_30_days')">30j</button>
                </div>
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-search"></i> Analyser
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Global Statistics Overview -->
<div class="row mb-4">
    <div class="col-md-2">
        <div class="stat-card">
            <div class="stat-icon info">
                <i class="bi bi-people"></i>
            </div>
            <div class="stat-number">{{ global_stats.total_users|default(0) }}</div>
            <div class="stat-label">Utilisateurs actifs</div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="stat-card">
            <div class="stat-icon primary">
                <i class="bi bi-cloud-upload"></i>
            </div>
            <div class="stat-number">{{ global_stats.total_uploads }}</div>
            <div class="stat-label">Uploads</div>
            <div class="stat-detail">{{ global_stats.total_uploads_size }}</div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="stat-card">
            <div class="stat-icon success">
                <i class="bi bi-cloud-download"></i>
            </div>
            <div class="stat-number">{{ global_stats.total_downloads }}</div>
            <div class="stat-label">Téléchargements</div>
            <div class="stat-detail">{{ global_stats.total_downloads_size }}</div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="stat-card">
            <div class="stat-icon warning">
                <i class="bi bi-share"></i>
            </div>
            <div class="stat-number">{{ global_stats.total_files_shared }}</div>
            <div class="stat-label">Fichiers partagés</div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="stat-card">
            <div class="stat-icon danger">
                <i class="bi bi-clock-history"></i>
            </div>
            <div class="stat-number">{{ global_stats.total_files_expired }}</div>
            <div class="stat-label">Fichiers expirés</div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="stat-card">
            <div class="stat-icon secondary">
                <i class="bi bi-trash"></i>
            </div>
            <div class="stat-number">{{ global_stats.total_files_deleted }}</div>
            <div class="stat-label">Fichiers supprimés</div>
        </div>
    </div>
</div>

<!-- Charts Row -->
<div class="row mb-4">
    <!-- Global File Types Chart -->
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <h6><i class="bi bi-pie-chart"></i> Types de fichiers globaux</h6>
            </div>
            <div class="card-body">
                <canvas id="globalFileTypesChart" height="300"></canvas>
            </div>
        </div>
    </div>
    
    <!-- Global Hourly Activity Chart -->
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <h6><i class="bi bi-clock"></i> Activité globale par heure</h6>
            </div>
            <div class="card-body">
                <canvas id="globalHourlyActivityChart" height="300"></canvas>
            </div>
        </div>
    </div>
</div>

<!-- Top Users Table -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h6><i class="bi bi-trophy"></i> Top utilisateurs</h6>
            </div>
            <div class="card-body">
                {% if global_stats.top_users is defined and global_stats.top_users is not empty %}
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Rang</th>
                                    <th>Utilisateur</th>
                                    <th>Uploads</th>
                                    <th>Taille uploads</th>
                                    <th>Téléchargements</th>
                                    <th>Taille téléchargements</th>
                                    <th>Activité totale</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for rank, userData in global_stats.top_users %}
                                    <tr>
                                        <td>
                                            <span class="badge bg-primary">#{{ loop.index }}</span>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="user-avatar me-2" style="width: 32px; height: 32px; font-size: 0.8rem;">
                                                    {{ userData.user.email|first|upper }}
                                                </div>
                                                <div>
                                                    <div class="fw-semibold">{{ userData.user.email }}</div>
                                                    <small class="text-muted">
                                                        {% if userData.user.roles|length > 1 %}
                                                            <span class="badge bg-success">Admin</span>
                                                        {% else %}
                                                            <span class="badge bg-secondary">User</span>
                                                        {% endif %}
                                                    </small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge bg-primary">{{ userData.uploads }}</span>
                                        </td>
                                        <td>{{ userData.uploads_size|number_format(2) }} MB</td>
                                        <td>
                                            <span class="badge bg-success">{{ userData.downloads }}</span>
                                        </td>
                                        <td>{{ userData.downloads_size|number_format(2) }} MB</td>
                                        <td>
                                            <span class="badge bg-info">{{ userData.total_activity }}</span>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="text-center text-muted py-4">
                        <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                        <p class="mt-3">Aucune donnée disponible pour cette période</p>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<!-- File Types Detail -->
{% if global_stats.file_types is defined and global_stats.file_types is not empty %}
<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h6><i class="bi bi-list-ul"></i> Détail des types de fichiers</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Extension</th>
                                <th>Nombre total</th>
                                <th>Pourcentage</th>
                                <th>Barre de progression</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% set total_files = 0 %}
                            {% for count in global_stats.file_types %}
                                {% set total_files = total_files + count %}
                            {% endfor %}
                            {% for extension, count in global_stats.file_types|slice(0, 20) %}
                                <tr>
                                    <td>
                                        <span class="badge bg-secondary">{{ extension|upper }}</span>
                                    </td>
                                    <td>{{ count|number_format }}</td>
                                    <td>{{ (count / total_files * 100)|round(1) }}%</td>
                                    <td>
                                        <div class="progress" style="height: 20px;">
                                            <div class="progress-bar" style="width: {{ (count / total_files * 100)|round(1) }}%">
                                                {{ (count / total_files * 100)|round(1) }}%
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endif %}
{% endblock %}

{% block javascripts %}
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
// Date range functions
function setDateRange(range) {
    const ranges = {{ date_range|json_encode|raw }};
    const selectedRange = ranges[range];
    
    if (selectedRange) {
        document.getElementById('start_date').value = selectedRange.start;
        document.getElementById('end_date').value = selectedRange.end;
    }
}

// Chart.js configuration
Chart.defaults.font.family = "'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif";
Chart.defaults.color = '#64748b';

// Global File Types Chart
const globalFileTypesCtx = document.getElementById('globalFileTypesChart').getContext('2d');
const globalFileTypesData = {{ global_stats.file_types|default({})|json_encode|raw }};
const topGlobalFileTypes = Object.entries(globalFileTypesData).slice(0, 10);

const globalFileTypesChart = new Chart(globalFileTypesCtx, {
    type: 'doughnut',
    data: {
        labels: topGlobalFileTypes.map(([ext]) => ext.toUpperCase()),
        datasets: [{
            data: topGlobalFileTypes.map(([, count]) => count),
            backgroundColor: [
                'rgba(239, 68, 68, 0.8)',
                'rgba(59, 130, 246, 0.8)',
                'rgba(16, 185, 129, 0.8)',
                'rgba(245, 158, 11, 0.8)',
                'rgba(139, 92, 246, 0.8)',
                'rgba(236, 72, 153, 0.8)',
                'rgba(14, 165, 233, 0.8)',
                'rgba(34, 197, 94, 0.8)',
                'rgba(251, 146, 60, 0.8)',
                'rgba(168, 85, 247, 0.8)'
            ],
            borderWidth: 2,
            borderColor: '#fff'
        }]
    },
    options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
            legend: {
                position: 'bottom',
                labels: {
                    padding: 20,
                    usePointStyle: true
                }
            }
        }
    }
});

// Global Hourly Activity Chart
const globalHourlyActivityCtx = document.getElementById('globalHourlyActivityChart').getContext('2d');
const globalHourlyActivityChart = new Chart(globalHourlyActivityCtx, {
    type: 'bar',
    data: {
        labels: Array.from({length: 24}, (_, i) => `${i.toString().padStart(2, '0')}:00`),
        datasets: [{
            label: 'Activité globale',
            data: {{ global_stats.hourly_activity|default({})|json_encode|raw }},
            backgroundColor: 'rgba(37, 99, 235, 0.8)',
            borderColor: 'rgba(37, 99, 235, 1)',
            borderWidth: 1
        }]
    },
    options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
            legend: {
                display: false
            }
        },
        scales: {
            y: {
                beginAtZero: true,
                ticks: {
                    stepSize: 1
                }
            }
        }
    }
});
</script>
{% endblock %}
