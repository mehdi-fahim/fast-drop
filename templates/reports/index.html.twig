{% extends 'base.html.twig' %}

{% block title %}Rapports d'utilisation - FastDrop{% endblock %}

{% block page_title %}
    <i class="bi bi-graph-up me-2"></i>Mes rapports d'utilisation
{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-graph-up"></i> Mes rapports d'utilisation</h1>
    <div class="d-flex gap-2">
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('reports_global') }}" class="btn btn-outline-primary">
                <i class="bi bi-globe"></i> Rapports globaux
            </a>
        {% endif %}
        <a href="{{ path('dashboard') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Retour au dashboard
        </a>
    </div>
</div>

<!-- Date Range Selector -->
<div class="card mb-4">
    <div class="card-header">
        <h6><i class="bi bi-calendar-range"></i> Période d'analyse</h6>
    </div>
    <div class="card-body">
        <form method="GET" class="row g-3">
            <div class="col-md-4">
                <label for="start_date" class="form-label">Date de début</label>
                <input type="date" class="form-control" id="start_date" name="start_date" 
                       value="{{ start_date|date('Y-m-d') }}" required>
            </div>
            <div class="col-md-4">
                <label for="end_date" class="form-label">Date de fin</label>
                <input type="date" class="form-control" id="end_date" name="end_date" 
                       value="{{ end_date|date('Y-m-d') }}" required>
            </div>
            <div class="col-md-4">
                <label class="form-label">Périodes rapides</label>
                <div class="btn-group w-100" role="group">
                    <button type="button" class="btn btn-outline-secondary btn-sm" onclick="setDateRange('today')">Aujourd'hui</button>
                    <button type="button" class="btn btn-outline-secondary btn-sm" onclick="setDateRange('last_7_days')">7j</button>
                    <button type="button" class="btn btn-outline-secondary btn-sm" onclick="setDateRange('last_30_days')">30j</button>
                </div>
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-search"></i> Analyser
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Statistics Overview -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-icon primary">
                <i class="bi bi-cloud-upload"></i>
            </div>
            <div class="stat-number">{{ user_stats.total_uploads }}</div>
            <div class="stat-label">Uploads</div>
            <div class="stat-detail">{{ user_stats.total_uploads_size }}</div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-icon success">
                <i class="bi bi-cloud-download"></i>
            </div>
            <div class="stat-number">{{ user_stats.total_downloads }}</div>
            <div class="stat-label">Téléchargements</div>
            <div class="stat-detail">{{ user_stats.total_downloads_size }}</div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-icon warning">
                <i class="bi bi-share"></i>
            </div>
            <div class="stat-number">{{ user_stats.total_files_shared }}</div>
            <div class="stat-label">Fichiers partagés</div>
            <div class="stat-detail">Durant la période</div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-icon info">
                <i class="bi bi-files"></i>
            </div>
            <div class="stat-number">{{ user_stats.file_types|length }}</div>
            <div class="stat-label">Types de fichiers</div>
            <div class="stat-detail">Différents formats</div>
        </div>
    </div>
</div>

<!-- Charts Row -->
<div class="row mb-4">
    <!-- Daily Trends Chart -->
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h6><i class="bi bi-graph-up"></i> Tendances quotidiennes</h6>
            </div>
            <div class="card-body">
                <canvas id="dailyTrendsChart" height="300"></canvas>
            </div>
        </div>
    </div>
    
    <!-- Hourly Activity Chart -->
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h6><i class="bi bi-clock"></i> Activité par heure</h6>
            </div>
            <div class="card-body">
                <canvas id="hourlyActivityChart" height="300"></canvas>
            </div>
        </div>
    </div>
</div>

<!-- File Types and Top Files -->
<div class="row">
    <!-- File Types Chart -->
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <h6><i class="bi bi-pie-chart"></i> Types de fichiers</h6>
            </div>
            <div class="card-body">
                <canvas id="fileTypesChart" height="300"></canvas>
            </div>
        </div>
    </div>
    
    <!-- File Types Table -->
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <h6><i class="bi bi-list-ul"></i> Détail des types de fichiers</h6>
            </div>
            <div class="card-body">
                {% if user_stats.file_types is not empty %}
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Extension</th>
                                    <th>Nombre</th>
                                    <th>Pourcentage</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% set total_files = 0 %}
                                {% for count in user_stats.file_types %}
                                    {% set total_files = total_files + count %}
                                {% endfor %}
                                {% for extension, count in user_stats.file_types|slice(0, 10) %}
                                    <tr>
                                        <td>
                                            <span class="badge bg-secondary">{{ extension|upper }}</span>
                                        </td>
                                        <td>{{ count }}</td>
                                        <td>
                                            <div class="progress" style="height: 20px;">
                                                <div class="progress-bar" style="width: {{ (count / total_files * 100)|round(1) }}%">
                                                    {{ (count / total_files * 100)|round(1) }}%
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="text-center text-muted py-4">
                        <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                        <p class="mt-3">Aucune donnée disponible pour cette période</p>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
// Date range functions
function setDateRange(range) {
    const ranges = {{ date_range|json_encode|raw }};
    const selectedRange = ranges[range];
    
    if (selectedRange) {
        document.getElementById('start_date').value = selectedRange.start;
        document.getElementById('end_date').value = selectedRange.end;
    }
}

// Chart.js configuration
Chart.defaults.font.family = "'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif";
Chart.defaults.color = '#64748b';

// Daily Trends Chart
const dailyTrendsCtx = document.getElementById('dailyTrendsChart').getContext('2d');
const dailyTrendsChart = new Chart(dailyTrendsCtx, {
    type: 'line',
    data: {
        labels: {{ trends|map(t => t.date)|json_encode|raw }},
        datasets: [
            {
                label: 'Uploads',
                data: {{ trends|map(t => t.uploads)|json_encode|raw }},
                backgroundColor: 'rgba(16, 185, 129, 0.1)',
                borderColor: 'rgba(16, 185, 129, 1)',
                borderWidth: 2,
                tension: 0.4,
                fill: true
            },
            {
                label: 'Téléchargements',
                data: {{ trends|map(t => t.downloads)|json_encode|raw }},
                backgroundColor: 'rgba(59, 130, 246, 0.1)',
                borderColor: 'rgba(59, 130, 246, 1)',
                borderWidth: 2,
                tension: 0.4,
                fill: true
            }
        ]
    },
    options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
            legend: {
                position: 'top',
            },
            title: {
                display: false
            }
        },
        scales: {
            y: {
                beginAtZero: true,
                ticks: {
                    stepSize: 1
                }
            }
        }
    }
});

// Hourly Activity Chart
const hourlyActivityCtx = document.getElementById('hourlyActivityChart').getContext('2d');
const hourlyActivityChart = new Chart(hourlyActivityCtx, {
    type: 'bar',
    data: {
        labels: Array.from({length: 24}, (_, i) => `${i.toString().padStart(2, '0')}:00`),
        datasets: [{
            label: 'Activité',
            data: {{ user_stats.hourly_activity|json_encode|raw }},
            backgroundColor: 'rgba(37, 99, 235, 0.8)',
            borderColor: 'rgba(37, 99, 235, 1)',
            borderWidth: 1
        }]
    },
    options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
            legend: {
                display: false
            }
        },
        scales: {
            y: {
                beginAtZero: true,
                ticks: {
                    stepSize: 1
                }
            }
        }
    }
});

// File Types Chart
const fileTypesCtx = document.getElementById('fileTypesChart').getContext('2d');
const fileTypesData = {{ user_stats.file_types|json_encode|raw }};
const topFileTypes = Object.entries(fileTypesData).slice(0, 8);

const fileTypesChart = new Chart(fileTypesCtx, {
    type: 'doughnut',
    data: {
        labels: topFileTypes.map(([ext]) => ext.toUpperCase()),
        datasets: [{
            data: topFileTypes.map(([, count]) => count),
            backgroundColor: [
                'rgba(239, 68, 68, 0.8)',
                'rgba(59, 130, 246, 0.8)',
                'rgba(16, 185, 129, 0.8)',
                'rgba(245, 158, 11, 0.8)',
                'rgba(139, 92, 246, 0.8)',
                'rgba(236, 72, 153, 0.8)',
                'rgba(14, 165, 233, 0.8)',
                'rgba(34, 197, 94, 0.8)'
            ],
            borderWidth: 2,
            borderColor: '#fff'
        }]
    },
    options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
            legend: {
                position: 'bottom',
                labels: {
                    padding: 20,
                    usePointStyle: true
                }
            }
        }
    }
});

// Auto-refresh charts when date range changes
document.querySelector('form').addEventListener('submit', function(e) {
    // Charts will be recreated with new data after page reload
});
</script>
{% endblock %}
