{% extends 'base.html.twig' %}

{% block title %}Administration - Fichiers{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-files"></i> Gestion des fichiers</h1>
    <a href="{{ path('admin_dashboard') }}" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Retour</a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Nom</th>
                        <th>Propriétaire</th>
                        <th>Taille</th>
                        <th>Statut</th>
                        <th>Expiration</th>
                        <th>Créé</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for file in files %}
                        <tr>
                            <td>{{ file.filename }}</td>
                            <td>{{ file.owner.email }}</td>
                            <td>{{ (file.sizeBytes / 1024 / 1024)|number_format(2) }} MB</td>
                            <td>
                                <form method="post" action="{{ path('admin_file_update_status', {id: file.id}) }}" class="d-inline">
                                    <div class="input-group input-group-sm" style="min-width: 200px;">
                                        <select name="status" class="form-select" onchange="this.form.submit()">
                                            <option value="ok" {{ file.status == 'ok' ? 'selected' : '' }}>ok</option>
                                            <option value="uploading" {{ file.status == 'uploading' ? 'selected' : '' }}>uploading</option>
                                            <option value="quarantine" {{ file.status == 'quarantine' ? 'selected' : '' }}>quarantine</option>
                                            <option value="deleted" {{ file.status == 'deleted' ? 'selected' : '' }}>deleted</option>
                                        </select>
                                        <button class="btn btn-outline-secondary" type="submit" title="Appliquer">
                                            <i class="bi bi-check2"></i>
                                        </button>
                                    </div>
                                </form>
                            </td>
                            <td>{{ file.expiresAt ? file.expiresAt|date('d/m/Y H:i') : '-' }}</td>
                            <td>{{ file.createdAt|date('d/m/Y H:i') }}</td>
                            <td class="text-end">
                                <div class="btn-group btn-group-sm">
                                    <a class="btn btn-outline-primary" href="{{ path('api_download_file', {id: file.id}) }}" title="Télécharger"><i class="bi bi-download"></i></a>
                                    <form method="post" action="{{ path('admin_file_delete', {id: file.id}) }}" onsubmit="return confirm('Supprimer ce fichier ?')">
                                        <button class="btn btn-outline-danger" title="Supprimer"><i class="bi bi-trash"></i></button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr><td colspan="7" class="text-center text-muted">Aucun fichier</td></tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}

