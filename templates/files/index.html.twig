{% extends 'base.html.twig' %}

{% block title %}Mes fichiers - FastDrop{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1><i class="bi bi-folder2-open"></i> Mes fichiers</h1>
                <a href="{{ path('upload') }}" class="btn btn-primary">
                    <i class="bi bi-cloud-upload"></i> Nouvel upload
                </a>
            </div>

            {% if files is empty %}
                <div class="text-center py-5">
                    <i class="bi bi-folder-x display-1 text-muted"></i>
                    <h3 class="mt-3 text-muted">Aucun fichier</h3>
                    <p class="text-muted">Vous n'avez pas encore uploadé de fichiers.</p>
                    <a href="{{ path('upload') }}" class="btn btn-primary">
                        <i class="bi bi-cloud-upload"></i> Commencer un upload
                    </a>
                </div>
            {% else %}
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Fichier</th>
                                        <th>Taille</th>
                                        <th>Statut</th>
                                        <th>Projet</th>
                                        <th>Date d'upload</th>
                                        <th>Expiration</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for file in files %}
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    {% set extension = file.filename|split('.')|last|lower %}
                                                    {% if extension in ['jpg', 'jpeg', 'png', 'gif', 'webp'] %}
                                                        <i class="bi bi-image text-info me-2"></i>
                                                    {% elseif extension in ['pdf'] %}
                                                        <i class="bi bi-file-earmark-pdf text-danger me-2"></i>
                                                    {% elseif extension in ['doc', 'docx'] %}
                                                        <i class="bi bi-file-earmark-word text-primary me-2"></i>
                                                    {% elseif extension in ['xls', 'xlsx'] %}
                                                        <i class="bi bi-file-earmark-excel text-success me-2"></i>
                                                    {% elseif extension in ['ppt', 'pptx'] %}
                                                        <i class="bi bi-file-earmark-ppt text-warning me-2"></i>
                                                    {% elseif extension in ['zip', 'rar', '7z'] %}
                                                        <i class="bi bi-file-earmark-zip text-secondary me-2"></i>
                                                    {% elseif extension in ['mp4', 'avi', 'mov'] %}
                                                        <i class="bi bi-file-earmark-play text-danger me-2"></i>
                                                    {% else %}
                                                        <i class="bi bi-file-earmark text-muted me-2"></i>
                                                    {% endif %}
                                                    <div>
                                                        <div class="fw-bold">{{ file.filename }}</div>
                                                        {% if file.description %}
                                                            <small class="text-muted">{{ file.description }}</small>
                                                        {% endif %}
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">
                                                    {{ (file.sizeBytes / 1024 / 1024)|number_format(2) }} MB
                                                </span>
                                            </td>
                                            <td>
                                                {% if file.status == 'uploading' %}
                                                    <span class="badge bg-warning">
                                                        <i class="bi bi-hourglass-split"></i> Upload en cours
                                                    </span>
                                                {% elseif file.status == 'ok' %}
                                                    <span class="badge bg-success">
                                                        <i class="bi bi-check-circle"></i> Prêt
                                                    </span>
                                                {% elseif file.status == 'error' %}
                                                    <span class="badge bg-danger">
                                                        <i class="bi bi-exclamation-triangle"></i> Erreur
                                                    </span>
                                                {% else %}
                                                    <span class="badge bg-secondary">{{ file.status }}</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if file.projectName %}
                                                    <span class="badge bg-info">{{ file.projectName }}</span>
                                                {% else %}
                                                    <span class="text-muted">-</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <small>{{ file.createdAt|date('d/m/Y H:i') }}</small>
                                            </td>
                                            <td>
                                                {% if file.expiresAt %}
                                                    {% set daysLeft = (file.expiresAt.timestamp - 'now'|date('U')) / 86400 %}
                                                    {% if daysLeft > 0 %}
                                                        <div class="d-flex flex-column">
                                                            <small class="text-muted">{{ file.expiresAt|date('d/m/Y') }}</small>
                                                            {% if daysLeft < 7 %}
                                                                <span class="badge bg-warning text-dark" style="font-size: 0.7em;">
                                                                    {{ daysLeft|round }}j restant
                                                                </span>
                                                            {% elseif daysLeft < 30 %}
                                                                <span class="badge bg-info" style="font-size: 0.7em;">
                                                                    {{ daysLeft|round }}j restant
                                                                </span>
                                                            {% endif %}
                                                        </div>
                                                    {% else %}
                                                        <span class="badge bg-danger">Expiré</span>
                                                    {% endif %}
                                                {% else %}
                                                    <span class="badge bg-success">Illimité</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    {% if file.status == 'ok' %}
                                                        <a href="{{ path('api_download_file', {id: file.id}) }}" 
                                                           class="btn btn-outline-primary btn-sm"
                                                           title="Télécharger">
                                                            <i class="bi bi-download"></i>
                                                        </a>
                                                        {% set daysLeft = file.expiresAt ? (file.expiresAt.timestamp - 'now'|date('U')) / 86400 : 999999 %}
                                                        {% if daysLeft > 0 %}
                                                            <form method="post" action="{{ path('files_generate_token', {id: file.id}) }}" style="display:inline">
                                                                <button class="btn btn-outline-success btn-sm" title="Créer un lien de partage">
                                                                    <i class="bi bi-link-45deg"></i>
                                                                </button>
                                                            </form>
                                                        {% else %}
                                                            <button class="btn btn-outline-secondary btn-sm" title="Fichier expiré - impossible de créer un lien" disabled>
                                                                <i class="bi bi-link-45deg"></i>
                                                            </button>
                                                        {% endif %}
                                                        <button class="btn btn-outline-warning btn-sm" 
                                                                title="Modifier l'expiration"
                                                                onclick="editExpiration({{ file.id }}, '{{ file.expiresAt ? file.expiresAt|date('Y-m-d') : '' }}')">
                                                            <i class="bi bi-calendar-event"></i>
                                                        </button>
                                                    {% endif %}
                                                    <button class="btn btn-outline-danger btn-sm"
                                                            title="Supprimer"
                                                            onclick="deleteFile({{ file.id }})">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-md-6">
                        <div class="card bg-light">
                            <div class="card-body">
                                <h6 class="card-title">
                                    <i class="bi bi-pie-chart"></i> Statistiques
                                </h6>
                                <div class="row text-center">
                                    <div class="col-4">
                                        <div class="h4 text-primary">{{ files|length }}</div>
                                        <small class="text-muted">Fichiers</small>
                                    </div>
                                    <div class="col-4">
                                        {% set totalSize = files|reduce((carry, file) => carry + file.sizeBytes, 0) %}
                                        <div class="h4 text-success">{{ (totalSize / 1024 / 1024)|number_format(1) }} MB</div>
                                        <small class="text-muted">Taille totale</small>
                                    </div>
                                    <div class="col-4">
                                        {% set activeFiles = files|filter(f => f.status == 'ok')|length %}
                                        <div class="h4 text-info">{{ activeFiles }}</div>
                                        <small class="text-muted">Actifs</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card bg-light">
                            <div class="card-body">
                                <h6 class="card-title">
                                    <i class="bi bi-speedometer2"></i> Quota
                                </h6>
                                {% if user.quotaTotalBytes is null %}
                                    <div class="text-center">
                                        <i class="bi bi-infinity display-6 text-success"></i>
                                        <div class="mt-2">Quota illimité</div>
                                    </div>
                                {% else %}
                                    {% set usedPercent = (user.quotaUsedBytes / user.quotaTotalBytes) * 100 %}
                                    <div class="progress mb-2">
                                        <div class="progress-bar {% if usedPercent > 80 %}bg-danger{% elseif usedPercent > 60 %}bg-warning{% else %}bg-success{% endif %}" 
                                             style="width: {{ usedPercent }}%"></div>
                                    </div>
                                    <div class="text-center">
                                        <small>
                                            {{ (user.quotaUsedBytes / 1024 / 1024)|number_format(1) }} MB / 
                                            {{ (user.quotaTotalBytes / 1024 / 1024)|number_format(1) }} MB
                                        </small>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>

<!-- Modal pour modifier l'expiration -->
<div class="modal fade" id="editExpirationModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="bi bi-calendar-event me-2"></i>Modifier l'expiration
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="editExpirationForm" method="POST">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="expirationDate" class="form-label">Date d'expiration</label>
                        <input type="date" class="form-control" id="expirationDate" name="expiration_date">
                        <div class="form-text">
                            Laissez vide pour aucune expiration, ou sélectionnez une date dans le futur.
                        </div>
                    </div>
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle me-2"></i>
                        <strong>Note :</strong> Les liens de partage existants continueront de fonctionner jusqu'à leur propre expiration.
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-lg me-1"></i>Modifier
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
function deleteFile(fileId) {
    if (confirm('Êtes-vous sûr de vouloir supprimer ce fichier ?')) {
        // TODO: Implémenter la suppression
        alert('Fonction de suppression à implémenter');
    }
}

function editExpiration(fileId, currentExpiration) {
    // Remplir le formulaire avec la date actuelle
    document.getElementById('expirationDate').value = currentExpiration;
    
    // Définir l'action du formulaire
    document.getElementById('editExpirationForm').action = `/files/${fileId}/expiration`;
    
    // Afficher la modal
    const modal = new bootstrap.Modal(document.getElementById('editExpirationModal'));
    modal.show();
}
</script>
{% endblock %}
